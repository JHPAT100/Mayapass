<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="392dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="#4B5863"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="4dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="1dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="#7A7878" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/texto_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historia:"/>
                <TextView
                    android:id="@+id/con_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elemento_Nombre"
                    android:textSize="20dp" />




                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/texto_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By:"/>
                    <TextView android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/con_2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripcion" /></TableRow>

                <TextView
                    android:id="@+id/con_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historia"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    </FrameLayout>